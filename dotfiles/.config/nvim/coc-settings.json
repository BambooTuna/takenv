{
  "coc.preferences.formatOnSaveFiletypes": ["*"],

  "flutter.trace.server": "verbose",
  "flutter.lsp.initialization.closingLabels": true,
  "flutter.lsp.debug": true,
  "flutter.provider.hot-reload": true,
  "flutter.provider.enableSnippet": true,
  "flutter.sdk.dart-lookup": "asdf which dart",
  "flutter.sdk.flutter-lookup": "asdf which flutter",

  "snippets.ultisnips.pythonPrompt": false,
  "python.pythonPath": "asdf which python",
  "jedi": {
    "enable": true,
    "startupMessage": false,
    "executable.command": "jedi-language-server"
  },
  "diagnostic-languageserver.filetypes": {
    "python": ["flake8"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black"]
  },
  "diagnostic-languageserver.linters": {
    "flake8": {
      "command": "flake8",
      "debounce": 100,
      "args": ["--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s", "-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "flake8",
      "formatLines": 1,
      "formatPattern": [
        "(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "W": "warning",
        "E": "error",
        "F": "error",
        "C": "error",
        "N": "error"
      }
    }
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["--quiet", "-"]
    }
  },

  "eslint.packageManager": "yarn",
  "eslint.nodePath": "asdf which node",
  "eslint.autoFixOnSave": true,

  "go.goplsPath": "~/go/bin/gopls",

  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
