# env
export LANG=ja_JP.UTF-8

# alias
alias v="nvim"
alias k="kubectl"
alias t="terraform"
alias p="pm2"

alias ga="git add"
alias gc="git commit -m"
alias gp="git push origin"

# git worktree add のショートカット (例: gwa feature/some -> ../feature-some)
gwa() {
    if [ -z "$1" ]; then
        echo "Usage: gwa <branch-name>"
        return 1
    fi
    local branch="$1"
    local dir="${branch//\//-}"

    # ブランチが存在するかチェック
    if git show-ref --verify --quiet "refs/heads/$branch"; then
        # 既存ブランチの場合
        git worktree add "../$dir" "$branch"
    else
        # 新規ブランチの場合
        git worktree add "../$dir" -b "$branch"
    fi
}

# tmux ls (セッション一覧表示)
alias tls='tmux ls'

# tmux attach -t [name] (指定セッションにアタッチ)
