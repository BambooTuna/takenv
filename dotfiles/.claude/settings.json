{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(pnpm format)",
      "Bash(pnpm test:ci)",
      "mcp__ide__getDiagnostics"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "mcp__playwright__browser"
    ],
    "ask": ["Bash(rm:*)", "Bash(rm -rf:*)"],
    "defaultMode": "delegate"
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "model": "opus"
}
